<section class="feature-product section-padding">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <!-- section title start -->
        <div class="section-title text-center">
          <h2 class="title">featured products</h2>
          <p class="sub-title">Add featured products to weekly lineup</p>
        </div>
        <!-- section title start -->
      </div>
    </div>
    <div class="row">
      <div class="col-12">
       
        <div class="product-carousel-4_2 slick-row-10 slick-arrow-style">
          <!-- product item start -->
          {% for product in products %}
          <div class="product-item">
            <figure class="product-thumb">

              <a href="{{ product.href }}">
                <img class="pri-img" src="{{ product.thumb }}" alt="{{ product.name }}">
                <img class="sec-img" src="{{ product.thumb }}" alt="{{ product.name }}">
              </a>
              <div class="product-badge">
                <div class="product-label new">
                  <span>new</span>
                </div>
                <div class="product-label discount">
                  <span>10%</span>
                </div>
              </div>
              <div class="button-group">
                
                <a  data-toggle="tooltip" data-placement="left"title="{{ button_wishlist }}"
                onclick="wishlist.add('{{ product.product_id }}');"><i
                    class="pe-7s-like"></i></a>
               <a  data-toggle="tooltip" data-placement="left" title="{{ button_compare }}"
                onclick="compare.add('{{ product.product_id }}');"><i
                    class="pe-7s-refresh-2"></i></a>
              </div>
              <div class="cart-hover">
                
                <button class="btn btn-cart" onclick="cart.add('{{ product.product_id }}');">add to cart</button>
              </div>
            </figure>
            <div class="product-caption text-center">
              
              <ul class="color-categories">
                <li>
                  <a class="c-lightblue" href="#" title="LightSteelblue"></a>
                </li>
                <li>
                  <a class="c-darktan" href="#" title="Darktan"></a>
                </li>
                <li>
                  <a class="c-grey" href="#" title="Grey"></a>
                </li>
                <li>
                  <a class="c-brown" href="#" title="Brown"></a>
                </li>
              </ul>

              <h6 class="product-name">
                <a href="{{ product.href }}">{{ product.name }}</a>
              </h6>
              {% if product.price %}

              <div class="price-box">
                {% if not product.special %}
                {{ product.price }}
                {% else %}
                <span class="price-regular">{{ product.special }}</span>
                <span class="price-old"><del>{{ product.price }}</del></span>
                {% endif %}
              </div>
              {% endif %}
            </div>
          </div>
          {% endfor %}
          <!-- product item end -->
        </div>
        
      </div>
    </div>
  </div>
</section>


