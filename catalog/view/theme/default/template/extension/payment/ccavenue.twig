{% if checkout_method == 'iframe' %}
	<iframe name="hss_iframe" width="100%" height="450px" style="border:0px solid #DDDDDD;" src="{{ iframeaction }}"></iframe>	
{% else %}
	<form method="post" action="{{ action }}" id="ccavenueform" name="ccavenueform">		
		<input type="hidden" name="encRequest" value="{{ encrypted_data }}"> 
		<input type="hidden" name="access_code" value="{{ access_code }}">
		 <div class="buttons">
		  <div class="pull-right">
			<input type="submit" value="{{ button_confirm }}" id="button-confirm" class="btn btn-primary" />
		  </div>
		</div>
	</form>
{% endif %}