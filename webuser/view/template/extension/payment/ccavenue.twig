{{ header }}{{ column_left }}
<div id="content">
   <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-authorizenet-aim" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  {{ getkeyform }}
<div class="container-fluid">  
 {% if error_warning %}
   <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
   <div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
    </div>
   <div class="panel-body">
      <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-authorizenet-aim" class="form-horizontal">
		<div class="form-group required">
            <label class="col-sm-2 control-label" for="input-Merchant_Id">{{ entry_Merchant_Id }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_ccavenue_Merchant_Id" value="{{ payment_ccavenue_Merchant_Id }}" id="input-Merchant_Id" class="form-control" />
              {% if error_Merchant_Id %}
              <div class="text-danger">{{ error_Merchant_Id }}</div>
             {% endif %}
            </div>
          </div>
		  
		  <div class="form-group required">
			<label class="col-sm-2 control-label" for="input-total"><span data-toggle="tooltip"  title="{{ help_total }}">{{ entry_total }}</span></label>
            <div class="col-sm-10">
              <input type="text" name="payment_ccavenue_total" value="{{ payment_ccavenue_total }}" id="input-total" class="form-control" />
              {% if error_total %}
              <div class="text-danger">{{ error_total }}</div>
              {% endif %}
            </div>
          </div>
		  
		  <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-workingkey"><span data-toggle="tooltip"  title="{{ help_workingkey }}">{{ entry_workingkey }}</span></label>
            <div class="col-sm-10">
              <input type="text" name="payment_ccavenue_workingkey" value="{{ payment_ccavenue_workingkey }}" id="input-workingkey" class="form-control" />
              {% if error_workingkey %}
              <div class="text-danger">{{ error_workingkey }}</div>
              {% endif %}
            </div>
          </div>
		  
		  <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-access_code">{{ entry_access_code }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_ccavenue_access_code" value="{{ payment_ccavenue_access_code }}" id="input-access_code" class="form-control" />
              {% if error_access_code %}
              <div class="text-danger">{{ error_access_code }}</div>
             {% endif %}
            </div>
          </div>
		  
		  
		  <div class="form-group">
				<label class="col-sm-2 control-label" for="input-completed_status_id">{{ entry_completed_status }}</label>
				<div class="col-sm-10">
				  <select name="payment_ccavenue_completed_status_id" id="input-completed_status_id" class="form-control">
					{% for order_status in order_statuses %}
					{% if order_status.order_status_id == payment_ccavenue_completed_status_id %}
					<option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
					{% else %}
					<option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
					{% endif %}
                {% endfor %}
				  </select>
				</div>
			</div>
			
			<div class="form-group">
            <label class="col-sm-2 control-label" for="input-failed_status_id">{{ entry_failed_status }}</label>
            <div class="col-sm-10">
              <select name="payment_ccavenue_failed_status_id" id="input-failed_status_id" class="form-control">
                {% for order_status in order_statuses %}
                {% if order_status.order_status_id == payment_ccavenue_failed_status_id %}
                <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
               {% else %}
                <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
               {% endif %}
                {% endfor %}
              </select>
			</div>
			</div>
			
			
			<div class="form-group">
            <label class="col-sm-2 control-label" for="input-pending_status_id">{{ entry_pending_status }}</label>
            <div class="col-sm-10"> 
              <select name="payment_ccavenue_pending_status_id" id="input-pending_status_id" class="form-control">
                 {% for order_status in order_statuses %}
                {% if order_status.order_status_id == payment_ccavenue_pending_status_id %}
                <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                {% else %}
                <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                 {% endif %}
                {% endfor %}
              </select>
			</div>
			</div>
			
			<div class="form-group">
				<label class="col-sm-2 control-label" for="input-geo_zone_id">{{ entry_geo_zone }}</label>
				<div class="col-sm-10">
				  <select name="payment_ccavenue_geo_zone_id" id="input-geo_zone_id" class="form-control">
					<option value="0">{{ text_all_zones }}</option>
					{% for geo_zone in geo_zones %}
					{% if geo_zone.geo_zone_id == payment_ccavenue_geo_zone_id %}
					<option value="{{ geo_zone.geo_zone_id }}" selected="selected">{{ geo_zone.name }}</option>
					{% else %}
					<option value="{{ geo_zone.geo_zone_id }}">{{ geo_zone.name }}</option>
					{% endif %}
                {% endfor %}
				  </select>
				</div>
			</div>
			
			<div class="form-group">
				<label class="col-sm-2 control-label" for="input-checkout_method">{{ entry_checkout_method }}</label>
				<div class="col-sm-10">
				  <select name="payment_ccavenue_checkout_method" id="input-checkout_method" class="form-control">
					{% if payment_ccavenue_checkout_method == 'iframe' %}									
					<option value="iframe" selected="selected">{{ text_iframe }}</option>
					<option value="redirect">{{ text_redirect }}</option>									
					{% else %}
					<option value="iframe">{{ text_iframe }}</option>
					<option value="redirect" selected="selected">{{ text_redirect }}</option>									
					 {% endif %}
				  </select>
				</div>
			</div>
			
			<div class="form-group">
				<label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
				<div class="col-sm-10">	
				  <select name="payment_ccavenue_status" id="input-status" class="form-control">
					{% if payment_ccavenue_status %}
					<option value="1" selected="selected">{{ text_enabled }}</option>
					<option value="0">{{ text_disabled }}</option>
					{% else %}
					<option value="1">{{ text_enabled }}</option>
					<option value="0" selected="selected">{{ text_disabled }}</option>
					{% endif %}
				  </select>
				</div>
			</div>
			
			<div class="form-group">
            <label class="col-sm-2 control-label" for="input-sort_order">{{ entry_sort_order }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_ccavenue_sort_order" value="{{ payment_ccavenue_sort_order }}" id="input-sort_order" class="form-control" />
            </div>
          </div>
      </form>
    </div>
  </div>
</div>
</div>
{{ footer }}